@using Core.Models;

@{
    ViewBag.Title = "Details";
}

<h2>Order Details</h2>
@{

    Order theOrder=ViewData["order"] as Order;
}
<table style="font-family:Arial">
    <tr>
        <td><b>Id :</b></td>
        <td>@theOrder.Id</td>
    </tr>
    <tr>
        <td><b>OrderDate :</b></td>
        <td>@theOrder.OrderDate</td>
    </tr>
    <tr>
        <td><b>Status :</b></td>
        <td>@theOrder.Status</td>
    </tr>
    <tr>
        <td><b>TotalAmount :</b></td>
        <td>@theOrder.TotalAmount</td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Update", "Update", "Orders", new { id = theOrder.Id }, "")
        </td>
         <td>
            @Html.ActionLink("Delete", "Delete", "Orders", new { id = theOrder.Id }, "")
        </td>
    </tr>
</table>

